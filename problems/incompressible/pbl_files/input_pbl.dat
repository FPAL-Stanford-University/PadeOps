&INPUT

inputdir  =  "/home/aditya90/Codes/PadeOps/data/EkmanBL/output/"       ! Directory for input files
outputdir  = "/home/aditya90/Codes/PadeOps/data/EkmanBL/output/"      ! Directory for output files

nx = 64                  ! Number of points in X
ny = 64                  ! Number of points in Y
nz = 64                 ! Number of points in Z

dt = 1D-5               ! Fixed time step value (Set to negative to disable)
tstop = 1.D-5              ! Physical time to stop the simulation
CFL = -1.D0               ! CFL criterion for calculating the time step (Set to negative to disable)
nsteps = -1               ! Number of time steps before stopping (Set to negative to disable)


