useDynamicProcedure = .FALSE. 
useSGSClipping = .TRUE. 


topWall = 2               ! no_slip = 1, slip = 2 , wall model = 3

useRestartFile = .FALSE. 
restartFile_TID = 20000
restartFile_RID = 50

isInviscid = .TRUE.
useVerticalFilter = .TRUE.

/

&WALLMODEL 
z0 = 1.d-4
/

