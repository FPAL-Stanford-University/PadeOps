&INPUT

inputdir  =  "/home/aditya90/Codes/PadeOps/data/EkmanBL/output/"       ! Directory for input files
outputdir  = "/home/aditya90/Codes/PadeOps/data/EkmanBL/output/"      ! Directory for output files

nx = 96                  ! Number of points in X
ny = 96                  ! Number of points in Y
nz = 192                 ! Number of points in Z

dt = 0.001D0               ! Fixed time step value (Set to negative to disable)
tstop = 600.D0              ! Physical time to stop the simulation
