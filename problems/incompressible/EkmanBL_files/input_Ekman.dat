restartFile_TID = 999
restartFile_RID = 10
useWallModelTop = .FALSE.
useWallModelBot = .FALSE.
isInviscid = .FALSE.
useVerticalFilter = .TRUE.

&EKMANINPUT
Ro = 9.9                ! Rossby Number 
delta_Ek = 0.0497      ! Non-Dimensional Laminar Ekman Layer Depth (= sqrt(2Ro/Re))
