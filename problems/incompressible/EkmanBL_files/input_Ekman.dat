/

&IINPUT
Re = 8000.D0              ! Reynolds Number
Pr = 0.7D0                ! Prandtl Number
runID = 10                 ! Run ID (for output file name)
useSGS = .TRUE.          ! LES mode or DNS mode?
useCoriolis = .TRUE. 
